@model IEnumerable<Acme.VendingMachine.Model.CashSet>

<h3>Cash Receiiiiiver</h3>
<form asp-controller="Machine" asp-action="CollectCash">
    <div class="row">
        <div class="col-sm-5">
            @Html.DisplayNameFor(model => model.Denomination.Name)
        </div>
        <div class="col-sm-5">
            @Html.DisplayNameFor(model => model.Quantity)
        </div>
    </div>
    @{ int i = 0; }
    @foreach (var item in Model)
    {
        <div>
            <div class="col-sm-5">
                @Html.DisplayFor(modelItem => item.Denomination.Name)
                (
                @Html.DisplayFor(modelItem => item.Denomination.Amount)
                )
                <input type="hidden" name="cashSets[@i].Denomination.Name" value="@item.Denomination.Name" />
                <input type="hidden" name="cashSets[@i].Denomination.Amount" value="@item.Denomination.Amount" />
            </div>
            <div class="col-sm-5">
                <input class="text-box single-line" data-val="true" data-val-required="The Quantity field is required." 
                       id="item_Quantity[@i]" name="cashSets[@i].Quantity" type="number" value="@item.Quantity" />
            </div>
        </div>
        i++;
    }
    <div class="row">
        <input type="submit" value="Submit" class="col-sm-offset-2 col-sm-2 btn-success" />
        <input type="reset" class="col-sm-offset-2 col-sm-2 btn-danger" />
    </div>
</form>