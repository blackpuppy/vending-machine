@model IEnumerable<Acme.VendingMachine.Model.Product>

<h3>Product Catalog</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.SoldOut ? "bg-danger text-muted" : (item.Seleted ? "bg-success" : "bg-info text-dark"))">
                <td>
                    <if include-if="@(item.Seleted)">
                        <strong>
                            @Html.DisplayFor(modelItem => item.ItemNo)
                        </strong>
                    </if>
                    <if exclude-if="@(item.Seleted)">
                        @Html.DisplayFor(modelItem => item.ItemNo)
                    </if>
                </td>
                <td>
                    <if include-if="@(item.Seleted)">
                        <strong>
                            @Html.DisplayFor(modelItem => item.Name)
                        </strong>
                    </if>
                    <if exclude-if="@(item.Seleted)">
                        @Html.DisplayFor(modelItem => item.Name)
                    </if>
                </td>
                <td>
                    <if include-if="@(item.Seleted)">
                        <strong>
                            @Html.DisplayFor(modelItem => item.DisplayPrice)
                        </strong>
                    </if>
                    <if exclude-if="@(item.Seleted)">
                        @Html.DisplayFor(modelItem => item.DisplayPrice)
                    </if>
                </td>
                <td>
                    <if include-if="@(item.Seleted)">
                        <strong>
                            @Html.DisplayFor(modelItem => item.DisplayQuantity)
                        </strong>
                    </if>
                    <if exclude-if="@(item.Seleted)">
                        @Html.DisplayFor(modelItem => item.DisplayQuantity)
                    </if>
                </td>
            </tr>
        }
    </tbody>
</table>
